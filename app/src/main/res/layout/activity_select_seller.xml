<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SelectSeller">

    <EditText
        android:id="@+id/searchTab"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Enter the Pincode"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true" />

    <include
        layout="@layout/recycler_view"
        android:layout_below="@id/searchTab"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/searchTab"
        android:layout_toEndOf="@+id/searchTab"
        app:srcCompat="@drawable/places_ic_search"
        android:layout_toRightOf="@+id/searchTab" />


</RelativeLayout>